<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
      <PropertyGroup>
        <EmguCusolverLinkTarget>Windows</EmguCusolverLinkTarget>
		<EmguCusolverBuildX86 Condition="'$(Platform)'=='AnyCPU' OR '$(Platform)'=='x86'">True</EmguCusolverBuildX86>
        <EmguCusolverBuildX64 Condition="'$(Platform)'=='AnyCPU' OR '$(Platform)'=='x64'">True</EmguCusolverBuildX64>
		<EmguCusolverNativeFileX64>$(MSBuildThisFileDirectory)x64\cucusolver64_${EMGU_TF_CUFFT_FILE_VERSION}.dll</EmguCusolverNativeFileX64>
		<EmguCusolverErrorMessage Condition="'$(EmguCusolverBuildX86)'=='True'">X86 or AnyCPU is targeted, but this CUDA Solver package do not support 32-bit. PInvoke may fail on Windows X86 platform.</EmguCusolverErrorMessage>
        <EmguCusolverDeployMessage Condition="'$(EmguCusolverBuildX64)'=='True' AND Exists('$(EmguCusolverNativeFileX64)')">$(EmguCusolverDeployMessage)x64 </EmguCusolverDeployMessage>
        <EmguCusolverErrorMessage Condition="'$(EmguCusolverBuildX64)'=='True' AND !Exists('$(EmguCusolverNativeFileX64)')">This package do not contain necessary binary for $(EmguCusolverLinkTarget). X64 is targeted, but file $(EmguCusolverNativeFileX64) is missing.  PInvoke may fail on Windows X64 platform. </EmguCusolverErrorMessage>
      </PropertyGroup>
      <ItemGroup Condition="'$(EmguCusolverBuildX64)'=='True' AND Exists('$(EmguCusolverNativeFileX64)')">
        <None Include="$(MSBuildThisFileDirectory)\x64\*.dll">
          <Link>x64\%(RecursiveDir)%(Filename)%(Extension)</Link>
          <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
      </ItemGroup>
	    <Target Name="EmguCusolverPackageBuildImports" BeforeTargets="PrepareForBuild">
    <Message Condition="'$(EmguCusolverLinkTarget)'!=''" Text="Emgu Cufft nuget package compiling with $(EmguCusolverLinkTarget) runtime." Importance="High" />
    <Warning Text="'$(EmguCusolverErrorMessage)'" Condition="'$(EmguCusolverErrorMessage)'!=''" />
    <Message Text="Emgu Cufft dependency Compiling with $(EmguCusolverDeployMessage) runtime" Condition="'$(EmguCusolverDeployMessage)'!=''" Importance="High" />
    <Message Text="No native binary is being deployed by the Emgu Cufft package." Condition="'$(EmguCusolverDeployMessage)'==''" Importance="High" />
  </Target>
</Project>